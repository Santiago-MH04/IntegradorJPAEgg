<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="IntegradorJPA" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
            <!--Para tener a la mano las entidades de SQL-->
        <class>com.egg.jpa.libreria.entidades.Libro</class>
        <class>com.egg.jpa.libreria.entidades.Autor</class>
        <class>com.egg.jpa.libreria.entidades.Editorial</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
            <!--Propiedades de conexión-->
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/integrador_libreria_egg?serverTimezone=America/Bogota"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="sasa"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/> <!--Esta propiedad, imperativo usarla sólo en pruebas-->
        </properties>
    </persistence-unit>
</persistence>